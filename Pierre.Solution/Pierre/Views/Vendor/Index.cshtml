@using Pierre.Models;

<h1>Vendor and Order Tracker</h1>
@if (Model.Count == 0)
{
    <p>There are no Vendors in the list.</p>
}
<ul>
@foreach (Vendor vendor in Model)
{
    <li>@vendor.Description</li>
}
</ul>

<a href='/vendors/new'>Add a new vendor.</a><br>
<a href='/vendors'>View all vendors</a>
